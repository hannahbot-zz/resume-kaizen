<%= form_for @resume, html: { class: 'form-horizontal' } do |f| %>

  <% if @resume.errors.any? %>
    <div class="alert alert-block">
      <h4>There are <%= pluralize(@resume.errors.count, "error") %>.</h4>
      <ul>
        <% @resume.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :group_id, value: @group_id %>
  <%= f.hidden_field :name, value: @name %>
  <%= f.hidden_field :reviewer_id, value: @reviewer_id %>
  <%= f.hidden_field :user_id, value: @user_id %>

  <div class="control-group">
    <%= f.label :file, class: 'control-label' %>
    <div class="controls">
      <%= f.file_field :file %>
    </div>
  </div>

  <div><%= f.submit "Submit!" %></div>
<% end %>

