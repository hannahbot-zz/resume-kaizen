<h1>My Resumes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Received</th>
      <th>Job link</th>
      <th>Job Description</th>
      <th>Download resume</th>
      <th>Send edited resume link</th>
      <th>Delete link</th>
    </tr>
  </thead>

  <tbody>

  <% @resumes.keys.each do |key| %>
    <tr><TD>Resume Groups</TD></tr>
    <tr><td></td></tr>

    <% @resumes[key].each do |resume| %>
        <tr>

          <td><%= resume.name %></td>
          <td><%= resume.created_at %></td>
          <td><%= resume.job_link %></td>
          <td><%= resume.job_description %></td>
          <td><%= link_to 'Download Resume', resume.file_url, class: "btn btn-info" %></td>
          <td><%= link_to 'Send Edited Resume', new_resume_path(group_id: resume.group_id, name: current_user.name), class: "btn btn-info" unless resume.name == current_user.name %></td>
          <td><%= link_to 'Destroy', resume, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>  
        </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
